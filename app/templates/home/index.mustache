{{>/shared/navbar_fixed_top_home}}		

<div class="container">

  <section id="sign_in">
    <div class="row">
      <div class="span12" style="text-align: center;">

        <div>  
          <h1 class="sign_in">Slideshows made Simple!</h1>
          <h2 class="lead">Build your own individual Slideshow and Share it with your Friends</h2>
        </div>

        <div class="sign_in" style="text-align: center;">
          {{login}}
        </div>

      </div>
    </div>
  </section>

  <hr class="soften">

  <section id="about">
    <div class="row">
      <div class="span12" style="text-align: center;">

        <p class="lead">SlideCloud. What i am and what i do......</p>

      </div>
    </div>
  </section>

  <hr class="soften">
  
  <section id="slideshows_home">
    <div class="row">
      <div class="span12" style="text-align: center;">
        {{#slideshows}}
