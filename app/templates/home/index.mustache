        {{/slideshows}}

      </div>
    </div>
  </section>

  <hr class="soften">
  
  <section id="team">
    <div class="row">
      <div class="span12" style="text-align: center;">

        <p class="lead">Who build me?!? </p>

      </div>
    </div>
  </section>

  <hr class="soften">
  
  <footer id="progress">
    <div class="row">
      <div class="span12">


        <p class="lead">5% of work is done, more or less. Less...</p>
        <div class="progress progress-striped active">
          <div class="bar" style="width: 5%;"></div>
        </div>

      </div>
    </div>	
  </footer>
</div>
