

<% if devise_mapping.omniauthable? %>

  <div class="omniauthable">
    <p class="lead">for the full power of SlideCloud</p> 
    <p class="lead">we highly recommend to....</p>
  </div>

  <div class="omniauthable_facebook" >
    <% resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), :class => "btn btn-large btn-primary"  %><br />
    <% end %>
  </div>
  
<% end %>