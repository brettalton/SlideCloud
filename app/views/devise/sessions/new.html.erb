<section class="devise"> 
  <div class="container"> 
    <div class="row">
     
      <div class="span12">
        <p class="lead">...you can also use our old fashioned login</p>
      </div>
              
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-inline"}) do |f| %>
         
        <div class="span12">
          <%= f.email_field :email, :class => 'input-small', :placeholder => 'Email'  %>

          <%= f.password_field :password, :class => 'input-small', :placeholder => 'Password' %>
      
          <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me %> <%= f.label :remember_me, :class => 'checkbox' %>
          <% end -%>

            <%= f.submit "Sign in", :class => "btn btn-success" %>
          <% end %>
        
        </div> 
        <div class="span12">
          <%= render "devise/shared/links" %>
        </div>
    </div>
  </div>
</section>

