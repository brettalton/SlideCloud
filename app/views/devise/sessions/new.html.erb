<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container"> 
      <%= link_to 'SlideCloud', root_path,  :class => 'brand' %>
        <!-- .nav, .navbar-search, .navbar-form, etc -->
        <ul class="nav pull-right">
          <li>
            <%= link_to 'bring me back', :back %>
          </li>
        </ul>
    </div>
  </div>
</div>

<div class="container">

  <section class="omniauthable_facebook">
    <div class="row">
    
      <div class="span12" style="text-align: center;">
        <%= render "devise/shared/omniauthable.html.erb" %>
      </div>
    
    </div>
  </section>
    
  <section class="devise">  
    <div class="row">
     
      <div class="span12">
        <p class="lead">...you can also use our old fashioned login:</p>
      </div>
              
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-inline"}) do |f| %>
         
        <div class="span12">
          <%= f.email_field :email, :class => 'input-small', :placeholder => 'Email'  %>

          <%= f.password_field :password, :class => 'input-small', :placeholder => 'Password' %>
      
          <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me %> <%= f.label :remember_me, :class => 'checkbox' %>
          <% end -%>

            <%= f.submit "Sign in", :class => "btn btn-success" %>
          <% end %>
        
        </div> 
        <div class="span12">
          <%= render "devise/shared/links" %>
        </div>
    </div>
  </section>
  
  </div>
</section>