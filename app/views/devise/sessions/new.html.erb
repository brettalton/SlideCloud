<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container"> 
      <%= link_to 'SlideCloud', root_path,  :class => 'brand' %>
        <!-- .nav, .navbar-search, .navbar-form, etc -->
        <ul class="nav pull-right">
          <li>
            <%= link_to 'bring me back', :back %>
          </li>
        </ul>
    </div>
  </div>
</div>

<section>
  <div class="container">
    <div class="row">
    
      <div class="span6 offset1" style="text-align: center;">
      <%= render "devise/shared/omniauthable.html.erb" %>
    </div>
    
      <div class="span3 pull-right">
        <h4>...you can also use our old fashioned login:</h4>

        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div>
          <%= f.label :email %>
          <%= f.email_field :email %>
        </div>

        <div>
          <%= f.label :password %>
          <%= f.password_field :password %>
        </div>

        <% if devise_mapping.rememberable? -%>
        <div>
          <%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
          <% end -%>

          <div>
            <%= f.submit "Sign in", :class => "btn btn-success" %>
          </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>    
    </div>
  </div>
</section>