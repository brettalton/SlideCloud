</div>

<div class="container">
  
  <section class="home" style="background: #888888; min-height: 500px;  margin-left: -120px; margin-right: -120px;">
    
    <div class="row" style="text-align: center; margin-left: 0px; margin-right: 0px;">
      <h1 style="color: #ffffff;">Latest from the Showcase</h1>
    </div>
      <div id="myCarousel" class="carousel slide">
        <!-- Carousel items -->
        <div class="carousel-inner">
          <div class="active item">…</div>
          <div class="item">…</div>
          <div class="item">…</div>
        </div>
        <!-- Carousel nav -->
        <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
        <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
      </div>
      
    
    
  </section> 

  <section class="omniauthable_facebook">
    <div class="row">
    
      <div class="span12" style="text-align: center;">
        <%= render "devise/shared/omniauthable.html.erb" %>
      </div>
    
    </div>
  </section>
    
  <section class="devise">  
    <div class="row">
     
      <div class="span12">
        <p class="lead">...you can also use our old fashioned login:</p>
      </div>
              
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-inline"}) do |f| %>
         
        <div class="span12">
          <%= f.email_field :email, :class => 'input-small', :placeholder => 'Email'  %>

          <%= f.password_field :password, :class => 'input-small', :placeholder => 'Password' %>
      
          <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me %> <%= f.label :remember_me, :class => 'checkbox' %>
          <% end -%>

            <%= f.submit "Sign in", :class => "btn btn-success" %>
          <% end %>
        
        </div> 
        <div class="span12">
          <%= render "devise/shared/links" %>
        </div>
    </div>
  </section>
  
  </div>
</section>